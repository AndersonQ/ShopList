<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="wrap_content"
    	android:layout_height="wrap_content">

	<TextView android:id="@+id/item_name_row"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="left"/>
	
	<TextView android:id="@+id/item_quant_text_row"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/item_quant_text"
	    android:layout_gravity="left"/>
	
	<TextView android:id="@+id/item_quant_row"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>

	<TextView android:id="@+id/item_purchased_text_row"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/item_purchased_text"
	    android:layout_gravity="left"/>
	
	<TextView android:id="@+id/item_purchased_row"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>


